<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(RootDirectory)\Source\SuperBasic.Utilities\SuperBasic.Utilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- MSBuild Tasks -->
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.7.179" />
  </ItemGroup>

  <PropertyGroup>
    <_TempDestination>$([System.IO.Path]::GetTempPath())$([System.Guid]::NewGuid())</_TempDestination>
    <_TempBinaryPath>$(_TempDestination)\$(MSBuildProjectName).dll</_TempBinaryPath>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="**\*.xml" />
  </ItemGroup>

  <UsingTask TaskName="GenerateTokenKinds" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateDiagnosticCode" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateDiagnosticBag" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateSyntaxNodes" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateBoundNodes" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateLibraries" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateLibraryInterfaces" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateCSInteropCallee" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateCSInteropCaller" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateJSInteropCallee" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateJSInteropCaller" AssemblyFile="$(_TempBinaryPath)" />

  <Target Name="RunGenerators" AfterTargets="Build">
    <ItemGroup>
      <_BuildOutputFiles Include="$(OutDir)**\*.*" />
    </ItemGroup>

    <!-- This is necessary to prevent file locking by msbuild when tasks are running -->
    <Copy SourceFiles="@(_BuildOutputFiles)" DestinationFolder="$(_TempDestination)" />

    <GenerateTokenKinds Input="Scanning\TokenKinds.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Scanning\TokenKind.Generated.cs" />
    <GenerateDiagnosticCode Input="Diagnostics\Diagnostics.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\DiagnosticCode.Generated.cs" />
    <GenerateDiagnosticBag Input="Diagnostics\Diagnostics.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\DiagnosticBag.Generated.cs" />
    <GenerateSyntaxNodes Input="Parsing\SyntaxNodes.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Parsing\SyntaxNodes.Generated.cs" />
    <GenerateBoundNodes Input="Binding\BoundNodes.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Binding\BoundNodes.Generated.cs" />
    <GenerateLibraries Input="Libraries\Libraries.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Runtime\Libraries\Libraries.Generated.cs" />
    <GenerateLibraryInterfaces Input="Libraries\Libraries.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Runtime\Libraries\Libraries.Interfaces.Generated.cs" />
    <GenerateCSInteropCallee Input="CSInterop\CSInteropTypes.xml" Output="$(RootDirectory)\Source\SuperBasic.Editor\Interop\CSInteropTypes.Generated.cs" />
    <GenerateCSInteropCaller Input="CSInterop\CSInteropTypes.xml" Output="$(RootDirectory)\Source\SuperBasic.Client\Interop\CSInteropTypes.Generated.ts" />
    <GenerateJSInteropCallee Input="JSInterop\JSInteropTypes.xml" Output="$(RootDirectory)\Source\SuperBasic.Client\Interop\JSInteropTypes.Generated.ts" />
    <GenerateJSInteropCaller Input="JSInterop\JSInteropTypes.xml" Output="$(RootDirectory)\Source\SuperBasic.Editor\Interop\JSInteropTypes.Generated.cs" />
  </Target>

</Project>