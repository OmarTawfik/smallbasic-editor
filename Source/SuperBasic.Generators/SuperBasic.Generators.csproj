<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProjectType>Build</ProjectType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(RootDirectory)\Source\SuperBasic.Utilities\SuperBasic.Utilities.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <_TempDestination>$([System.IO.Path]::GetTempPath())$([System.Guid]::NewGuid())</_TempDestination>
    <_TempBinaryPath>$(_TempDestination)\$(MSBuildProjectName).dll</_TempBinaryPath>
  </PropertyGroup>

  <ItemGroup>
    <_BuildOutputFiles Include="$(OutDir)**\*.*" />

    <EmbeddedResource Include="$(RootDirectory)\Source\SuperBasic.Compiler\Scanning\TokenKinds.xml" Link="Scanning\TokenKinds.xml" />
    <EmbeddedResource Include="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\Diagnostics.xml" Link="Diagnostics\Diagnostics.xml" />
    <EmbeddedResource Include="$(RootDirectory)\Source\SuperBasic.Compiler\Parsing\SyntaxNodes.xml" Link="Parsing\SyntaxNodes.xml" />
  </ItemGroup>

  <UsingTask TaskName="GenerateTokenKinds" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateDiagnosticCode" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateDiagnosticBag" AssemblyFile="$(_TempBinaryPath)" />
  <UsingTask TaskName="GenerateSyntaxNodes" AssemblyFile="$(_TempBinaryPath)" />

  <Target Name="RunGenerators" AfterTargets="Build">
    <!-- This is necessary to prevent file locking by msbuild when tasks are running -->
    <Copy SourceFiles="@(_BuildOutputFiles)" DestinationFolder="$(_TempDestination)" />

    <GenerateTokenKinds Input="$(RootDirectory)\Source\SuperBasic.Compiler\Scanning\TokenKinds.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Scanning\TokenKind.Generated.cs" />
    <GenerateDiagnosticCode Input="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\Diagnostics.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\DiagnosticCode.Generated.cs" />
    <GenerateDiagnosticBag Input="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\Diagnostics.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Diagnostics\DiagnosticBag.Generated.cs" />
    <GenerateSyntaxNodes Input="$(RootDirectory)\Source\SuperBasic.Compiler\Parsing\SyntaxNodes.xml" Output="$(RootDirectory)\Source\SuperBasic.Compiler\Parsing\SyntaxNodes.Generated.cs" />
  </Target>

</Project>